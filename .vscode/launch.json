	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'post_system_service'",
			"cargo": {
				"args": [
					"build",
					"--bin=post_system_service",
					"--package=post_system_service"
				],
				"filter": {
					"name": "post_system_service",
					"kind": "bin"
				}
			},
			"args": [],
			"env": {
				"TLS": "true",
				"RUST_LOG": "TRACE,warp=INFO"
			},
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'post_system_service'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=post_system_service",
					"--package=post_system_service"
				],
				"filter": {
					"name": "post_system_service",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
